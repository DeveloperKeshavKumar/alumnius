<!-- views/successStories.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('partials/head'); %>
</head>
<body>
   <%- include('partials/navbar'); %>
    <div class="container mt-5">
        <h1 class="mb-4">Success Stories</h1>
        <div class="list-group">
            <% stories.forEach(story => { %>
                <a href="/success-stories/<%= story._id %>" class="list-group-item list-group-item-action">
                    <h5 class="mb-1"><%= story.title %></h5>
                    <p class="mb-1"><%= story.content.substring(0, 100) %>...</p>
                    <small>By <%= story.author.name %></small>
                </a>
            <% }) %>
        </div>
        <a href="/" class="btn btn-primary mt-4">Back to Home</a>
        <a href="/api/v1/stories/create" class="btn btn-primary mt-4">Create Success Story</a>
    </div>
</body>
</html>
