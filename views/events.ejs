<!-- views/events.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
   <%- include('partials/head'); %>
</head>

<body>
   <%- include('partials/navbar'); %>
      <div class="container mt-5">
         <h1 class="mb-4">Events</h1>
         <div class="list-group">
            <% events.forEach(event=> { %>
               <a href="/api/v1/events/<%= event._id %>" class="list-group-item list-group-item-action">
                  <h5 class="mb-1">
                     <%= event.title %>
                  </h5>
                  <p class="mb-1">
                     <%= event.description.substring(0, 100) %>...
                  </p>
                  <small>
                     <%= event.date.toDateString() %> - <%= event.type %>
                  </small>
               </a>
               <% }) %>
         </div>
         <a href="/" class="btn btn-primary mt-4">Back to Home</a>
         <a href="/api/v1/events/create" class="btn btn-primary mt-4">Create Event</a>

      </div>
</body>

</html>